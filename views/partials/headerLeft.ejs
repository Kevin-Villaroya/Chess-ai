      <img class = "nav-sprite" src = "/assets/nav-link/logo.png"/>
      <span class = "nav-link-span" href="/"> ChessAI </span>
    </a>
    
  
    <% if( locals.nickname) { %>
      <a href = "/user/<%= nickname %>" class = "nav-link-component">
        <img class = "nav-sprite" src = "/assets/nav-link/account.png"/>
        <span class = "nav-link-span" href="/"> <%= nickname %> </span>
      </a>
    <% }else{ %>
      <a href = "/login" class = "nav-link-component">
        <img class = "nav-sprite" src = "/assets/nav-link/login.png"/>
